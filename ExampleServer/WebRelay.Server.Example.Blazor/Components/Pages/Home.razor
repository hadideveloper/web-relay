@page "/"
@using WebRelay.Server.Example.Blazor.Services
@inject RelayCommandService RelayService
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Relay Control</PageTitle>

<div class="relay-control-panel">
    <h1 class="panel-title">ESP32 Relay Control</h1>
    <p class="panel-subtitle">Control your relays remotely</p>

    <div class="relay-grid">
        <!-- Relay 1 Card -->
        <div class="relay-card @(RelayService.Relay1State ? "relay-on" : "relay-off")">
            <div class="relay-indicator">
                <div class="indicator-glow @(RelayService.Relay1State ? "glow-active" : "")"></div>
                <div class="indicator-core @(RelayService.Relay1State ? "core-active" : "")"></div>
            </div>
            <h2 class="relay-name">Relay 1</h2>
            <span class="relay-status">@(RelayService.Relay1State ? "ON" : "OFF")</span>
            <div class="button-group">
                <button class="btn btn-on @(RelayService.Relay1State ? "active" : "")" @onclick="() => SetRelay1(true)">
                    <span class="btn-icon">⚡</span>
                    Turn On
                </button>
                <button class="btn btn-off @(!RelayService.Relay1State ? "active" : "")"
                    @onclick="() => SetRelay1(false)">
                    <span class="btn-icon">○</span>
                    Turn Off
                </button>
            </div>
        </div>

        <!-- Relay 2 Card -->
        <div class="relay-card @(RelayService.Relay2State ? "relay-on" : "relay-off")">
            <div class="relay-indicator">
                <div class="indicator-glow @(RelayService.Relay2State ? "glow-active" : "")"></div>
                <div class="indicator-core @(RelayService.Relay2State ? "core-active" : "")"></div>
            </div>
            <h2 class="relay-name">Relay 2</h2>
            <span class="relay-status">@(RelayService.Relay2State ? "ON" : "OFF")</span>
            <div class="button-group">
                <button class="btn btn-on @(RelayService.Relay2State ? "active" : "")" @onclick="() => SetRelay2(true)">
                    <span class="btn-icon">⚡</span>
                    Turn On
                </button>
                <button class="btn btn-off @(!RelayService.Relay2State ? "active" : "")"
                    @onclick="() => SetRelay2(false)">
                    <span class="btn-icon">○</span>
                    Turn Off
                </button>
            </div>
        </div>
    </div>

    <div class="info-panel">
        <div class="info-icon">ℹ️</div>
        <p>ESP32 polls <code>/api/relay</code> every 2 seconds. Commands will be sent on the next poll.</p>
    </div>

    <div class="footer-section">
        <div class="footer-content">
            <div class="footer-item">
                <span class="footer-label">GitHub:</span>
                <a href="https://github.com/hadideveloper/web-relay" target="_blank" rel="noopener noreferrer"
                    class="footer-link">
                    https://github.com/hadideveloper/web-relay
                </a>
            </div>
            <div class="footer-item">
                <span class="footer-badge">Open Source</span>
                <span class="footer-separator">•</span>
                <span class="footer-text">MIT License</span>
            </div>
            <div class="footer-disclaimer">
                <span class="footer-warning">⚠️</span>
                <span>No Warranty or any responsibilities</span>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --bg-dark: #0d1117;
        --bg-card: #161b22;
        --border-color: #30363d;
        --text-primary: #e6edf3;
        --text-secondary: #8b949e;
        --accent-green: #3fb950;
        --accent-green-glow: rgba(63, 185, 80, 0.4);
        --accent-red: #f85149;
        --accent-red-dim: #6e2d29;
        --accent-blue: #58a6ff;
    }

    .relay-control-panel {
        min-height: 100vh;
        background: var(--bg-dark);
        background-image:
            radial-gradient(ellipse at top, rgba(88, 166, 255, 0.08) 0%, transparent 50%),
            radial-gradient(ellipse at bottom right, rgba(63, 185, 80, 0.05) 0%, transparent 40%);
        padding: 3rem 1.5rem;
        font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', monospace;
        color: var(--text-primary);
    }

    .panel-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        background: linear-gradient(135deg, var(--accent-blue), var(--accent-green));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
    }

    .panel-subtitle {
        text-align: center;
        color: var(--text-secondary);
        font-size: 1rem;
        margin: 0 0 3rem 0;
    }

    .relay-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .relay-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .relay-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--border-color);
        transition: background 0.3s ease;
    }

    .relay-card.relay-on::before {
        background: linear-gradient(90deg, var(--accent-green), rgba(63, 185, 80, 0.5));
        box-shadow: 0 0 20px var(--accent-green-glow);
    }

    .relay-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    }

    .relay-indicator {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .indicator-glow {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: transparent;
        transition: all 0.4s ease;
    }

    .indicator-glow.glow-active {
        background: radial-gradient(circle, var(--accent-green-glow) 0%, transparent 70%);
        animation: pulse-glow 2s ease-in-out infinite;
    }

    .indicator-core {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--accent-red-dim);
        border: 3px solid var(--accent-red);
        transition: all 0.3s ease;
        z-index: 1;
    }

    .indicator-core.core-active {
        background: var(--accent-green);
        border-color: var(--accent-green);
        box-shadow: 0 0 20px var(--accent-green-glow), inset 0 0 10px rgba(255, 255, 255, 0.3);
    }

        @@keyframes pulse - glow {

            0%,
            100% {
                opacity: 1;
                transform: scale(1);
            }

            50% {
                opacity: 0.6;
                transform: scale(1.1);
            }
        }

        .relay-name {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0 0 0.5rem 0;
            color: var(--text-primary);
        }

        .relay-status {
            display: inline-block;
            padding: 0.35rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            letter-spacing: 0.05em;
            margin-bottom: 1.5rem;
        }

        .relay-off .relay-status {
            background: rgba(248, 81, 73, 0.15);
            color: var(--accent-red);
            border: 1px solid rgba(248, 81, 73, 0.3);
        }

        .relay-on .relay-status {
            background: rgba(63, 185, 80, 0.15);
            color: var(--accent-green);
            border: 1px solid rgba(63, 185, 80, 0.3);
        }

        .button-group {
            display: flex;
            gap: 1rem;
            justify-content: center;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 10px;
            font-family: inherit;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .btn-icon {
            font-size: 1.1rem;
        }

        .btn-on {
            background: rgba(63, 185, 80, 0.15);
            color: var(--accent-green);
            border: 1px solid rgba(63, 185, 80, 0.3);
        }

        .btn-on:hover {
            background: rgba(63, 185, 80, 0.25);
            transform: scale(1.02);
        }

        .btn-on.active {
            background: var(--accent-green);
            color: var(--bg-dark);
            box-shadow: 0 4px 20px var(--accent-green-glow);
        }

        .btn-off {
            background: rgba(248, 81, 73, 0.15);
            color: var(--accent-red);
            border: 1px solid rgba(248, 81, 73, 0.3);
        }

        .btn-off:hover {
            background: rgba(248, 81, 73, 0.25);
            transform: scale(1.02);
        }

        .btn-off.active {
            background: var(--accent-red);
            color: white;
            box-shadow: 0 4px 20px rgba(248, 81, 73, 0.4);
        }

        .info-panel {
            max-width: 600px;
            margin: 3rem auto 0;
            padding: 1rem 1.5rem;
            background: rgba(88, 166, 255, 0.08);
            border: 1px solid rgba(88, 166, 255, 0.2);
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .info-icon {
            font-size: 1.5rem;
        }

        .info-panel p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 0.875rem;
            line-height: 1.5;
        }

        .info-panel code {
            background: rgba(88, 166, 255, 0.15);
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            color: var(--accent-blue);
            font-family: inherit;
            font-size: 0.85rem;
        }

        .footer-section {
            max-width: 800px;
            margin: 4rem auto 0;
            padding: 2rem 1.5rem;
        }

        .footer-content {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
        }

        .footer-item {
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .footer-item:last-of-type {
            margin-bottom: 0.75rem;
        }

        .footer-label {
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        .footer-link {
            color: var(--accent-blue);
            text-decoration: none;
            font-size: 0.875rem;
            transition: color 0.2s ease;
        }

        .footer-link:hover {
            color: var(--accent-green);
            text-decoration: underline;
        }

        .footer-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            background: rgba(63, 185, 80, 0.15);
            color: var(--accent-green);
            border: 1px solid rgba(63, 185, 80, 0.3);
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.05em;
        }

        .footer-separator {
            color: var(--text-secondary);
            margin: 0 0.5rem;
        }

        .footer-text {
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        .footer-disclaimer {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--border-color);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            color: var(--text-secondary);
            font-size: 0.8rem;
        }

        .footer-warning {
            font-size: 1rem;
        }

        @@media(max - width: 480px) {
        .panel-title {
            font-size: 1.75rem;
        }

                .button-group {
                    flex-direction: column;
                }

                .relay-card {
                    padding: 1.5rem;
                }
            }
        </style>

@code {
    protected override void OnInitialized()
    {
        RelayService.OnStateChanged += OnRelayStateChanged;
    }

    private async void OnRelayStateChanged()
    {
        await InvokeAsync(StateHasChanged);
    }

    private void SetRelay1(bool state)
    {
        RelayService.SetRelay1(state);
    }

    private void SetRelay2(bool state)
    {
        RelayService.SetRelay2(state);
    }

    public void Dispose()
    {
        RelayService.OnStateChanged -= OnRelayStateChanged;
    }
}
